{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "types": ["node"],
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    // "strict": true,
    // "importHelpers": true,
    // "emitDeclarationOnly": true,
    // "allowImportingTsExtensions": true,
    "plugins": [
      {
        "transform": "ts-transformer-keys/transformer"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "test",
    "scripts"
  ]
}